<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="5dp"
    android:layout_marginVertical="5dp"
    android:background="@drawable/bg_container_productitem"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp">

        <ImageView
            android:id="@+id/ivProductItem_RecyclerViewProductList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@drawable/icon_notification" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvNameProductItem_RecyclerViewProductList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Name product"
            android:textAlignment="center"
            android:textSize="12dp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/tvPriceProductItem_RecyclerViewProductList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2.000.000 VND"
            android:textColor="#F80000"
            android:textSize="16dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

           <LinearLayout
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:orientation="vertical"
               >
               <TextView
                   android:id="@+id/tvStarProductItem_RecyclerViewProductList"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:drawableLeft="@drawable/icon_love"
                   android:layout_weight="0.2"
                   android:textSize="16dp"
                   android:textStyle="bold"
                   android:text="2.3"
                   />
               <TextView
                   android:id="@+id/tvCmtProductItem_RecyclerViewProductList"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:drawableLeft="@drawable/icon_comment"
                   android:layout_weight="0.2"
                   android:textSize="16dp"
                   android:textStyle="bold"
                   android:text="2.3"
                   />


           </LinearLayout>

            <TextView
                android:id="@+id/tvAddressShopProductItem_RecyclerViewProductList"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tp.HCM"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="12dp"
                android:textStyle="italic" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>